- name: Set up Python
  uses: actions/setup-python@v4
  with:
    python-version: '3.11'  # or another valid version

- name: Install dependencies
  run: |
    python -m pip install --upgrade pip
    pip install -r requirements.txt
    pip install pytest  # <-- Add this line if not already in requirements.txt

- name: Run Unit Tests
  run: pytest

